{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/index-node.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "src/index-wasm.ts",
    "src/makeApi.ts"
  ]
}